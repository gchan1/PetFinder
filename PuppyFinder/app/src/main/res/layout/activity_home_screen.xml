<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="387dp"
        android:layout_height="16dp"
        android:background="@layout/round_corners"
        android:clickable="false"
        android:visibility="visible"
        app:srcCompat="@color/colorPrimary"
        tools:layout_editor_absoluteX="5dp"
        tools:layout_editor_absoluteY="102dp" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="android.support.design.widget.AppBarLayout$ScrollingViewBehavior">

        <LinearLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:context="com.example.group1.puppyfinder.HomeScreen">

            <android.support.constraint.ConstraintLayout
                android:id="@+id/content"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">


                <ImageButton
                    android:background="@layout/round_corners"
                    android:id="@+id/buttonMap"
                    android:layout_width="37dp"
                    android:layout_height="36dp"
                    android:backgroundTint="@color/colorPrimaryDark"
                    android:tint="@color/colorAccent"
                    app:srcCompat="@android:drawable/ic_menu_mylocation"
                    tools:layout_constraintBottom_creator="1"
                    android:layout_marginStart="29dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    tools:layout_constraintLeft_creator="1"
                    android:layout_marginBottom="5dp"
                    app:layout_constraintLeft_toRightOf="@+id/buttonShelters"
                    android:layout_marginLeft="29dp" />

                <ImageButton
                    android:background="@layout/round_corners"
                    android:id="@+id/buttonEvents"
                    android:layout_width="40dp"
                    android:layout_height="41dp"
                    android:layout_marginLeft="298dp"
                    android:backgroundTint="@color/colorPrimaryDark"
                    android:cropToPadding="false"
                    android:tint="@color/colorAccent"
                    app:layout_constraintLeft_toLeftOf="@+id/buttonShelters"
                    app:layout_constraintTop_toTopOf="@+id/buttonShelters"
                    app:srcCompat="@android:drawable/ic_menu_my_calendar"
                    tools:layout_constraintLeft_creator="1"
                    tools:layout_constraintTop_creator="1"
                    android:layout_marginStart="298dp" />

                <ImageButton
                    android:background="@layout/round_corners"
                    android:id="@+id/buttonShelters"
                    android:layout_width="37dp"
                    android:layout_height="35dp"
                    android:backgroundTint="@color/colorPrimaryDark"
                    android:tint="@color/colorAccent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_home_black_24dp"
                    tools:layout_constraintLeft_creator="1"
                    tools:layout_constraintTop_creator="1"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="42dp"
                    android:layout_marginStart="16dp" />

                <ImageView
                    android:id="@+id/topBar"
                    android:layout_width="0dp"
                    android:layout_height="12dp"
                    android:background="@color/colorPrimary"
                    android:clickable="false"
                    android:visibility="visible"
                    app:srcCompat="@color/colorPrimary"
                    tools:layout_constraintTop_creator="1"
                    tools:layout_constraintRight_creator="1"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginTop="13dp"
                    app:layout_constraintTop_toBottomOf="parent"
                    tools:layout_constraintLeft_creator="1"
                    app:layout_constraintLeft_toLeftOf="parent" />

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="74dp"
                    android:layout_height="66dp"
                    app:srcCompat="@mipmap/ic_launcher"
                    tools:layout_constraintRight_creator="1"
                    tools:layout_constraintBottom_creator="1"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    tools:layout_constraintLeft_creator="1"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginBottom="-13dp" />
            </android.support.constraint.ConstraintLayout>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</android.support.design.widget.CoordinatorLayout>
