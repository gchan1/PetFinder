<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/totalLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffffff"
    android:backgroundTint="#ffffffff"
    android:visibility="visible">


    <LinearLayout

        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:scaleType="center"
        android:visibility="visible"
        tools:context="com.example.group1.puppyfinder.HomeScreen"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


        <ImageView

            android:id="@+id/topBar"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_margin="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:background="@color/colorAccent"
            android:clickable="false"
            android:scaleType="center"
            android:visibility="visible"
            app:srcCompat="@color/colorAccent" />

        <LinearLayout

            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="3dp"
            android:layout_marginBottom="0dp"
            android:layout_marginEnd="3dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginStart="3dp"
            android:layout_marginTop="0dp"
            android:background="@color/colorPrimary"
            android:backgroundTint="@color/colorPrimary"
            android:fitsSystemWindows="false"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:paddingLeft="0dp"
            android:theme="@style/AppTheme"
            android:visibility="visible">

            <ImageButton

                android:id="@+id/imageButton5"
                android:layout_width="37dp"
                android:layout_height="37dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:background="@layout/round_corners"
                android:backgroundTint="@color/colorPrimaryDark"
                android:onClick="onClick"
                android:tint="@color/colorAccent"
                android:visibility="visible"
                app:srcCompat="@android:drawable/star_big_off" />


            <ImageButton

                android:id="@+id/buttonMap"
                android:layout_width="37dp"
                android:layout_height="37dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:background="@layout/round_corners"
                android:backgroundTint="@color/colorPrimaryDark"
                android:onClick="onClick"
                android:tint="@color/colorAccent"
                app:srcCompat="@android:drawable/ic_menu_mylocation" />

            <ImageView

                android:id="@+id/imageView3"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="0dp"
                android:layout_marginBottom="0dp"
                android:layout_marginEnd="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:elevation="1dp"
                android:visibility="visible"
                app:srcCompat="@mipmap/ic_launcher"
                tools:layout_editor_absoluteX="148dp"
                tools:layout_editor_absoluteY="13dp" />

            <ImageButton

                android:id="@+id/buttonEvents"
                android:layout_width="37dp"
                android:layout_height="37dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:background="@layout/round_corners"
                android:backgroundTint="@color/colorPrimaryDark"
                android:cropToPadding="false"
                android:onClick="onClick"
                android:tint="@color/colorAccent"
                android:visibility="visible"
                app:srcCompat="@android:drawable/ic_menu_my_calendar" />


            <ImageButton

                android:id="@+id/buttonShelters"
                android:layout_width="37dp"
                android:layout_height="37dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:background="@layout/round_corners"
                android:backgroundTint="@color/colorPrimaryDark"
                android:onClick="onClick"
                android:tint="@color/colorAccent"
                app:srcCompat="@drawable/ic_home_black_24dp" />


        </LinearLayout>

        <ImageView

            android:id="@+id/bottomBar"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_margin="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_weight="0.00"
            android:background="@color/colorAccent"
            android:clickable="false"
            android:scaleType="center"
            android:visibility="visible"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="parent"
            app:srcCompat="@color/colorAccent"
            tools:layout_constraintLeft_creator="1"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintTop_creator="1" />

        <TextView

            android:id="@+id/puppyCardTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:padding="8dp"
            android:paddingBottom="8dp"
            android:paddingEnd="8dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingStart="8dp"
            android:paddingTop="8dp"
            android:text="Featured Dogs"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="24sp"
            android:textStyle="bold"
            android:visibility="visible" />


        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/puppyList"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:background="@color/colorPrimaryDark"
                android:backgroundTint="@color/colorPrimaryDark"
                android:orientation="horizontal"></LinearLayout>
        </ScrollView>




    </LinearLayout>


</RelativeLayout>